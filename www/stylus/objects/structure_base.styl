/************/
/** HEADER **/
/************/

.header
  height 47rem
  &__title
    display none

.menu
  padding-top 1.5rem
  &__title
    display none
  &__logo-link
     margin-left 5rem

.menu__list
  display flex
  float right
  align-items: center
  height 6.4rem

.menu__item
  margin-right 3rem
  &:nth-child(6)
    margin-right 7.5rem

.header
  &__main-span
    display block
    margin-top 9.5rem
    text-align center
  &__second-span
    display block
    margin-top 1rem
    text-align center
  &__contener__button-hasard
    margin-top 5rem
    text-align center

/************/
/** FOOTER **/
/************/

.footer
  &-content
    height 20rem
    padding-top 5.5rem
    text-align center
    &__intro-text
      display block
      margin-bottom 1rem
    &__button
      display inline-block