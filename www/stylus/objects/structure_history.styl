.contener-history__button
  display block
  margin-top 3rem
  text-align center

.contener-history__button-link
  display inline-block
  margin 0 auto
  text-align center

.nav-filter
  display flex
  justify-content center
  margin-top 1.5rem

.content-history
  padding 0 1rem

.history-article
  max-width 86.5rem
  margin 0 auto
  position relative
  padding-right 1rem
  margin-top 7rem
  &__contener
    padding-top 2rem
    margin-left 30rem
  &__synopsis
    margin-top 3rem
  &__contener-info
    position absolute
    bottom 11rem
  &__read-history
    position absolute
    bottom 4rem
  &__maj
    position absolute
    top -3.5rem
    right -3.6rem
  &__more-history
    margin-top 7rem
    margin 10rem auto 0
  &__share-contener
    display flex
    align-items center
    position absolute
    bottom 4rem


