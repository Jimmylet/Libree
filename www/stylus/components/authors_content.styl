.search-author
  &__title
    display none
  &__contener-search
    background-color light-grey
    height 11rem
    width 37rem
    border-radius 1.5rem
  &__label
    color form-color
    font-size 1.5rem
  &__input
    width 25rem
    height 4.5rem
    border 1px solid form-border-color
    background-color form-background-color
    color form-color
    border-radius .5rem
    font-family proximanovafont
    font-weight 100
    font-size 1.5rem
    padding 1rem .6rem
    appearance none

.grid
  &__item
    &__author-title
      font-family camptonfont
      font-weight bold
      font-size 2.4rem
    &__author-img
      display block
    &__author-link
      display inline-block
      height 5.2rem
      width 22.2rem
      text-align center
      color main-white
      font-size 2.4rem
      line-height 5.2rem
      background-color blue-light
      border-radius 10rem
      text-decoration none
      &:hover
        background-color footer-dark-blue

.author__more-history
  text-transform uppercase
  font-weight bold
  font-size 2rem
  height 6.1rem
  width 39.3rem
  display block
  text-align center
  line-height 6.1rem
  border 2px solid blue-light
  color light-black
  text-decoration none
  &:hover
    background-color blue-light
    color main-white